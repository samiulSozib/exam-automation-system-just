<%- include('../../partials/header.ejs') %> 

    <div>
        <div class="container">
            <div class="card my-2">
                <div class="card-body">
                    <h5>Add Course For <%= department_name %> </h5>
                    
                   
                    <form action="/admin/add-course" method="POST" >
                        <div class="form-group mb-2">
                          <label for="course_name">Course Name</label>
                          <input type="text" class="form-control" name="course_name" id="course_name" aria-describedby="" placeholder="Enter Course Name">
                        </div>
                        <div class="form-group mb-2">
                            <label for="course_code">Course Code</label>
                            <input type="text" class="form-control" name="course_code" id="course_code" aria-describedby="" placeholder="Enter Course Code">
                          </div>

                        <div class="form-group mb-2">
                            <label for="course_credit" class="mr-5">Course Credit :</label>
                            <select name="course_credit" id="course_credit" class="p-2">
                              <option value=".5">0.5</option>
                              <option value="0.75">0.75</option>
                              <option value="1.0">1.0</option>
                              <option value="1.5">1.5</option>
                              <option value="2.0">2.0</option>
                              <option value="3.0">3.0</option>
                              <option value="4.0">4.0</option>
                              <option value="5.0">5.0</option>
                              <option value="6.0">6.0</option>
                            </select>
                          </div>

                          <div class="form-group mb-2">
                            <label for="course_type" class="mr-5">Course Credit :</label>
                            <select name="course_type" id="course_type" class="p-2">
                              <option value="Theory">Theory</option>
                              <option value="Laboratory">Laboratory</option>
                              
                            </select>
                          </div>

                          <div class="form-group mb-2">
                            <label for="session" class="mr-5">Session :</label>
                            <select name="session" id="session" class="p-2">
                              <option value="2017-18">2017-18</option>
                              <option value="2018-19">2018-19</option>
                              <option value="2019-20">2019-20</option>
                              <option value="2020-21">2020-21</option>
                              <option value="2021-22">2021-22</option>
                              <option value="2022-23">2022-23</option>
                              <option value="2023-24">2023-24</option>
                              <option value="2024-25">2024-25</option>
                            </select>
                          </div>
                        
                        

                        <button type="submit" class="btn btn-primary">Submit</button>
                      </form>
                    

                </div>
            </div>
        </div>
    </div>

    <%- include('../../partials/footer.ejs') %> 

    </body>
</html>